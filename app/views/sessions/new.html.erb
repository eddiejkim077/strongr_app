<body id="login-page">
  <div id="login-div">
    <h1 id="login-text">Log In</h1>
    <div id="log-in">
        <p id="alert"><%= alert %></p>
        <%= form_tag sessions_path do %>
          <div class ="login-form">
            <div class="field">
              <p>
              <%= label_tag :email %>
              </p>
              <%= text_field_tag :email, params[:email], class: "form-control" %>
            </div>
            <div class="field">
              <p>
              <%= label_tag :password %>
              </p>
              <%= password_field_tag :password, "Password", class: "form-control" %>
            </div>
            <div id="login-btn">
              <%= submit_tag "Log In", class: "btn btn-success" %>
            </div>
        <% end %>
          </div>
        </div>
      </div>
</body>   