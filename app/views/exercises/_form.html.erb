<div id="ex-form">
    <%= form_for [@plan, @exercise] do |f| %>
        <%= f.label :body_part, 'Body Part' %>
        <br>
        <%= f.collection_select :body_part, Exercise::BODY_PARTS, :to_s, :to_s, {include_blank:false} %>
        <br>
        <br>
        <%= f.label :name, 'Name of Exercise' %>
        <br>
        <%= f.text_field :name %>
        <br>
        <%= f.label :weight %>
        <br>
        <%= f.text_field :weight %>
        <br>
        <%= f.label :reps %>
        <br>
        <%= f.text_field :reps %>
        <br>
        <%= f.label :sets %>
        <br>
        <%= f.text_field :sets %>
        <br>
        <br>
        <%= f.submit 'Submit' %>
    <% end %>

</div>
<div id="plans-back-btn">
    <%= link_to "Back To Plan", plan_path(@plan), class: 'btn btn-default my-btn' %>
</div>